@model asp_Le_Thi_Thanh_Thao.Context.User

@{
    ViewBag.Title = "Delete";
}

<style>

    dl {
        background-color: #ccf5ff;
    }

    .ie7 dl {
        overflow: hidden;
    }

    dt,
    dd {
        box-sizing: border-box;
        padding: 10px;
    }

        dd ~ dt,
        dd ~ dd {
            border-top: 1px solid #bdc8ca;
        }

    dt {
        float: left;
        width: 35%;
        padding-bottom: 0;
    }

    .ie7 dt {
        padding-bottom: 10px;
        clear: both;
    }

    dd {
        margin-left: 35%;
        background-color: #fff;
    }

    .ie7 dd {
        margin-left: 40%;
        overflow: hidden;
    }

    dd:after {
        content: "";
        display: block;
        clear: both;
    }
    /*dt*/ .row2 + dd:after {
        content: none;
    }
</style>
<h3>Bạn có chắc chắn muốn xóa cái này không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsAdmin)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsAdmin)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            <div class="btn  p-2 btn-default ">

                @Html.ActionLink("Trở về", "Index")
            </div>
        </div>
    }
</div>
